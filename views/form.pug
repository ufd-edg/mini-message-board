extends layout

block content
    h1= title
    form(method="POST", action="/new", class="form")
        input(type="text", placeholder="Author's name", name="authorName", required)
        input(type="text", placeholder="Message text", name="messageText", required)
        input(type="submit", value="Submit", class="btn-submit")
    a(href="/", class="back-home")= 'Back to home'